<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :first_name %>
    <%= f.input :subject %>
    <%= f.input :description %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :read %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
